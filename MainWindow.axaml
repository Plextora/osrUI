<Window
    x:Class="osrUI.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="osrUI"
    Width="620"
    Height="420"
    Background="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    TransparencyLevelHint="ForceAcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Panel
        x:Name="MainPanel"
        Background="White"
        PointerMoved="MainPanel_OnPointerMoved"
        PointerPressed="MainPanel_OnPointerPressed"
        PointerReleased="MainPanel_OnPointerReleased">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.8"
                    TintColor="#101010"
                    TintOpacity="1.95" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">osrUI</Label>
    </Panel>
</Window>
